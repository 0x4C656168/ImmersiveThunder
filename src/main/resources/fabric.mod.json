{
  "schemaVersion": 1,
  "id": "leahs-immersive-thunder",
  "version": "${version}",
  "name": "Immersive Thunder",
  "description": "Just a simple mod to use distance-based thunder sounds",
  "authors": [
    "LeahPy"
  ],
  "contact": {
    "homepage": "https://github.com/LeahPy/ImmersiveThunder",
    "sources": "https://github.com/LeahPy/ImmersiveThunder"
  },
  "license": "MIT",
  "icon": "assets/leahs-immersive-thunder/icon.png",
  "environment": "client",
  "entrypoints": {
    "main": [
      "leah.leahs_immersive_thunder.ImmersiveThunderClient"
    ],
    "modmenu": [
      "leah.leahs_immersive_thunder.config.ModMenuIntegration"
    ]
  },
  "mixins": [
    "leahs-immersive-thunder.mixins.json"
  ],
  "depends": {
    "fabricloader": ">=${loader_version}",
    "minecraft": ">=${minecraft_version}",
    "fabric-api": "*"
  },
  "suggests": {
    "modmenu": ">=${modmenu_version}"
  }
}